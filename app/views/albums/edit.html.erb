<h1>Editing album</h1>

<%= render 'form' %>

<h1>Listing photos</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th></th>
  </tr>

<% @album.photos.each do |photo| %>
  <tr>
    <td><%= photo.name %></td>
    <td><%= photo.content %></td>
    <td><%= link_to 'Destroy', [@album, photo], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<h2>Add a photo to the album</h2>
<%= form_for [@album, Photo.new] do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.label :image %><br />
	  <%= f.file_field :image %>
	</div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Show', @album %> |
<%= link_to 'Back', albums_path %>
